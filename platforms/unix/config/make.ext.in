o		= .lo
a		= .la
COMPILE		= $(LIBTOOL) --mode=compile \
		  $(CC) $(CFLAGS) $(XCFLAGS) $(DEFS) $(XDEFS) \
		  $(INCLUDES) $(XINCLUDES) $(CPPFLAGS) $(XCPPFLAGS) -c -o
LINK		= $(LIBTOOL) --mode=link \
		  $(CC) $(CFLAGS) $(XCFLAGS) \
		  $(LDFLAGS) $(XLDFLAGS) -avoid-version -module -rpath $(libdir) -o
RANLIB		= :
